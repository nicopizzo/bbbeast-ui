@page "/mint"

@using BBBeastUI.Pages.Minting.Components

@inject Web3Options _web3Options

<div class="container">
    <div class="d-flex flex-column align-items-center">
        <h1>MINTING</h1>
        <p>Verified Contract Address: <a href="https://rinkeby.etherscan.io/address/@_web3Options.ContractAddress" target="_blank">@_web3Options.ContractAddress</a></p>
        <p>Total Minted: @(_TotalMinted?.ToString() ?? "???") / 10000</p>
        <WalletInteraction />
    </div>
</div>
