@page "/"

@using BBBeastUI.Pages.Index.Components

<div class="container">
    <div class="flex-row d-flex align-items-center">
        <div class="col-md-6">
            <BeastCarousel />
        </div>
        <div class="col-md-6 ms-5">
            <h1>BBBEAST</h1>
