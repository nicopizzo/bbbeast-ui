@page
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <title>BB Beast</title>
    <base href="/" />
    <link rel="shortcut icon" href="assets/BBBeast_Logo_Icon.png" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700;900&display=swap" rel="stylesheet">
    <link href="css/bootstrap.custom.min.css" rel="stylesheet" />
    <link href="lib/font-awesome/css/all.min.css" rel="stylesheet">
    <link href="_content/Havit.Blazor.Components.Web.Bootstrap/defaults.css" rel="stylesheet" />
    <link href="css/app.min.css" rel="stylesheet" />
    <link href="BBBeastUI.styles.css" rel="stylesheet" />
</head>

<body>
    <div id="app" class="d-flex flex-column min-vh-100">
        <component type="typeof(BBBeastUI.App)" render-mode="WebAssemblyPrerendered" />
        <persist-component-state />
    </div>
    
    <div id="blazor-error-ui">
        An unhandled error has occurred.
        <a href="" class="reload">Reload</a>
        <a class="dismiss">🗙</a>
    </div>
    <script src="_framework/blazor.webassembly.js"></script>
    <script src="lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="lib/jquery/jquery.min.js"></script>
    <script src="js/jsInterop.js"></script>
    <script src="js/index.bundle.js"></script>
</body>

</html>
